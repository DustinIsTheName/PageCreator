<div class="container">
	<h1 class="page-header">Pages</h1>
	<div class="row">
 
		<% @pages.each do |page| %>
			<div class="col-md-4">

				<h2><%= link_to page.title, page_path(page.id) %></h2>

				<h4>Contains these items:</h4>
				<ul>

					<% page.modules.each do |m| %>
					  <li><%= m %></li>
					<% end %>

				</ul>

			</div>
		<% end %>

	</div>

	<ul class="list-group">
		<li class="list-group-item">
			<%= link_to 'New Page', pages_new_path %>
		</li>
	</ul>
</div>